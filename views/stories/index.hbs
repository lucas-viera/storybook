<h1>Stories</h1>
<div class="row">
    
    {{!-- For each story, do the following --}}
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{!-- todo: editIcon --}}
                </div>
    
                <div class="card-content center-alig">
                    <h5>{{title}}</h5>
                    {{!-- In this point we are going to face formatting problems --}}
                    <p>{{body}}</p>
                    
                    <br>
                    
                    <div class="chip">
                        <img src="{{user.image}}" alt="">
                        <a href="/stories/user/{{user._id}}">{{{user.displayName}}}</a>
                    </div>
                </div>

                <div class="card-action center-align">
                    <a href="/stories/{{_id}}" class="btn grey">Read More</a>
                </div>

            </div>
        </div>
    {{else}}
        <p>No stories to display.</p>
    {{/else}}
</div>